<!DOCTYPE html>
<html lang="ja">
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="theme-color" content="#ffffff">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="nav">
      <nav class="navbar is-spaced">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to root_path, class: 'navbar-item logo' do %>
              <%= image_tag '/images/logo.png' %>
            <% end %>
            <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>

          <div id="navbarExampleTransparentExample" class="navbar-menu">
            <div class="navbar-start">
              <%= link_to '作品一覧を表示する', rooms_path, class: 'navbar-item' %>
            </div>

            <div class="navbar-end">
              <%= render partial: 'layouts/admin_menu' %>
              <%= link_to inquiries_index_path, class: 'navbar-item' do %>
                <%= icon('fas', 'question-circle', 'お問い合わせ') %>
              <% end %>
              <%= render partial: 'layouts/user_session' %>
            </div>
          </div>
        </div>
      </nav>
    </div>

    <% flash.each do |type, msg| %>
      <div class="notification is-<%= type %>"><%= msg %></div>
    <% end %>

    <div class="main_container container">
      <%= yield %>
    </div>

    <div class="footer_container">
      <footer>
        <div class="columns">
          <div class="column">
          </div>
          <div class="column"></div>
          <div class="column"></div>
          <div class="column"></div>
        </div>
      </footer>
    </div>
  </body>
</html>
